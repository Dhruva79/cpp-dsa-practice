//for single digit, ex. '123'--->1

#include <iostream>
using namespace std;
int main()
{
    char a[100];
    cin >> a;
    int b = a[0] - '0';
    cout << b;
    return 0;
}


//for n digits, ex. '123'--->123
#include <iostream>
using namespace std;
int main()
{
    char a[100];
    int digit = 0;
    cin >> a;
    for (int i = 0; a[i] != '\0'; i++) {
        digit = digit * 10 + (a[i] - '0');
    }
    
    cout << digit;
    return 0;
}

