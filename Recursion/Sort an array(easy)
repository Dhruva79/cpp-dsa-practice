#include <iostream>
#include <algorithm>  // for sort()
using namespace std;

int main() {
    int a[] = {5, 3, 1, 4, 2};
    int n = sizeof(a) / sizeof(int);

    sort(a, a + n);  // a=starting poiter, (a+n)=ending pointer

    cout << "Sorted array: ";
    for (int i = 0; i < n; i++) {
        cout << a[i] << " ";
    }

    return 0;
}
